#!/usr/bin/env bash
# Init script for managing the manage_my_process daemon

PID_FILE="/var/run/my_process.pid"
MANAGE_MY_PROCESS_SCRIPT="/path/to/manage_my_process"

start() {
    [ -f "$PID_FILE" ] && echo "manage_my_process is already running." && return
    $MANAGE_MY_PROCESS_SCRIPT & echo $! > "$PID_FILE" && echo "manage_my_process started."
}

stop() {
    [ -f "$PID_FILE" ] && pid=$(cat "$PID_FILE") && kill "$pid" && rm "$PID_FILE" && echo "manage_my_process stopped." || echo "manage_my_process is not running."
}

restart() {
    stop
    start
    echo "manage_my_process restarted."
}

case "$1" in
    start) start ;;
    stop) stop ;;
    restart) restart ;;
    *) echo "Usage: $0 {start|stop|restart}" >&2 && exit 1 ;;
esac

exit 0
